@model Entities.ViewModels.CreateTeamViewModel
@{
    ViewData["Title"] = "Create Team";
}

<h2>Create Your Fantasy Team</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Team Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter team name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="FavoriteClubId">Favorite Club</label>
        <select asp-for="FavoriteClubId" class="form-control" id="clubSelect">
            <option value="">-- Select a club --</option>
            @foreach (var club in Model.Clubs)
            {
                <option value="@club.Id" data-crest="@club.CrestUrl">@club.Name</option>
            }
        </select>
        <span asp-validation-for="FavoriteClubId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <img id="clubLogo" src="" alt="Club Logo" style="max-height:100px; display:none;" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Create Team</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('clubSelect').addEventListener('change', function () {
            var selectedOption = this.options[this.selectedIndex];
            var crestUrl = selectedOption.getAttribute('data-crest');
            var img = document.getElementById('clubLogo');

            if (crestUrl) {
                img.src = crestUrl;
                img.style.display = 'block';
            } else {
                img.style.display = 'none';
            }
        });
    </script>
}
