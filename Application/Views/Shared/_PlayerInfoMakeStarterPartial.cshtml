@model Entities.ViewModels.PlayerViewModel

<div id="player-@Model.Id" class="player-modal-overlay">
    <div class="player-modal-bench">
        <a href="#" class="close-modal">✕</a>

        <div class="modal-left">
            <div class="player-image-wrapper">
                <img src="@Model.KitUrl" class="player-kit" />
            </div>
        </div>

        <div class="modal-right">
            <h2>@Model.Name</h2>

            <div class="info-row"><span>Position: @Model.Position</span></div>

            @if (Model.Nationality != null)
            {
                <div class="info-row"><span>Nationality: @Model.Nationality</span></div>
            }
            @if (Model.DateOfBirth != null)
            {
                <div class="info-row">
                    <span>
                        Date of birth:
                        @Model.DateOfBirth.Value.ToString("dd MMM yyyy")
                    </span>
                </div>
            }

            @if (Model.Age != null)
            {
                <div class="info-row"><span>Age: @Model.Age</span></div>
            }

            <div class="info-row">
                <span>Select Starter Position:</span>
                <div class="starter-buttons">
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="1">GK</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="2">Left Back</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="3">Center Def 1</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="4">Center Def 2</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="5">Right Back</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="6">Left Wing</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="7">Half 1</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="8">Half 2</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="9">Right Wing</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="10">FW 1</button>
                    <button class="starter-btn" data-player-id="@Model.Id" data-pos="11">FW 2</button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    .player-modal-bench {
        display: grid;
        grid-template-columns: 1fr 1.5fr;
        width: 500px;
        max-width: 90%;
        height: 350px;
        background-color: transparent;
        padding: 0;
        position: relative;
        box-shadow: 0 12px 30px rgba(0,0,0,0.4);
        border-radius: 1px;
        overflow: hidden;
    }

    .starter-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 5px;
        margin-top: 5px;
    }

    .starter-btn {
        padding: 4px 6px;
        font-size: 0.8rem;
        border-radius: 4px;
        border: none;
        cursor: pointer;
        background-color: #37003C;
        color: white;
    }

        .starter-btn:hover {
            background-color: #00cd84;
        }
</style>