<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Application.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="pl-navbar">
            <div class="pl-navbar-grid">
                <div class="pl-logo">
                    <img src="~/img/Lion logo.png" alt="Logo">
                </div>
                <div class="pl-brand-wrap">
					<a class="navbar-brand" href="/"><small>PREMIER LEAGUE</small><br>Fantasy</a>
                </div>

                <!-- 75%: Навигация и бутони -->
                <div class="pl-nav-wrap">
                    <ul class="main-nav">
                        <li><a class="nav-link" href="/">Home</a></li>
                        <li><a class="nav-link" href="/Transfer/Market">Market</a></li>
                        <li><a class="nav-link" href="/Team/Leaderboard">FPL Leaderboard</a></li>
                    </ul>
                    <ul class="auth-nav">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <form asp-area="Identity" asp-page="/Account/Logout" method="post">
                                <button type="submit" class="nav-link log-regi">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a class="nav-link log-regi" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            <a class="nav-link log-regi" asp-area="Identity" asp-page="/Account/Register">Register</a>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Application - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
